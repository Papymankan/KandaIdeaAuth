@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <div class="welcome-card">
        <h1 class="title">🎉 Welcome to My Web App</h1>
        <p class="subtitle">This is a simple ASP.NET Core project with login, register, and profile features.</p>

        <div class="actions">
            <a href="/Account/Login" class="btn">Login</a>
            <a href="/Account/Register" class="btn btn-secondary">Register</a>
        </div>
    </div>
</div>

<style>
    .home-container {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .welcome-card {
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
        width: 400px;
    }

        .welcome-card .title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
            color: mediumpurple;
        }

        .welcome-card .subtitle {
            font-size: 15px;
            color: #666;
            margin-bottom: 30px;
        }

    .actions {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn {
        display: inline-block;
        text-decoration: none;
        background: mediumpurple;
        color: #fff;
        padding: 12px 25px;
        border-radius: 25px;
        transition: background 0.3s;
        font-size: 14px;
    }

        .btn:hover {
            background: rebeccapurple;
        }

    .btn-secondary {
        background: #f2f2f2;
        color: #444;
    }

        .btn-secondary:hover {
            background: #e5e5e5;
        }

</styl
